{
  "name": "timeline-app",
  "version": "1.0.0",
  "description": "A modern, responsive timeline application built with TypeScript",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "node build.js",
    "watch": "tsc --watch",
    "dev": "npm run build && python -m http.server 8000",
    "clean": "rm -rf dist",
    "rebuild": "npm run clean && npm run build",
    "type-check": "tsc --noEmit"
  },
  "keywords": [
    "timeline",
    "typescript",
    "vanilla-js",
    "responsive",
    "interactive"
  ],
  "author": "Timeline App Developer",
  "license": "MIT",
  "devDependencies": {
    "typescript": "^5.0.0"
  }
} 